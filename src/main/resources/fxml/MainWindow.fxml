<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainWindowController">
   <children>
      <MenuBar layoutY="-2.0" prefHeight="32.0" prefWidth="1024.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="newMenuItem" mnemonicParsing="false" text="New" />
                  <MenuItem fx:id="openMenuItem" mnemonicParsing="false" text="Open..." />
                  <MenuItem fx:id="openExampleMenuItem" mnemonicParsing="false" text="Open Example" />
                  <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem fx:id="undoMenuItem" mnemonicParsing="false" text="Undo" />
                  <MenuItem fx:id="redoMenuItem" mnemonicParsing="false" text="Redo" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="cutMenuItem" mnemonicParsing="false" text="Cut" />
                  <MenuItem fx:id="copyMenuItem" mnemonicParsing="false" text="Copy" />
                  <MenuItem fx:id="pasteMenuItem" mnemonicParsing="false" text="Paste" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Run">
               <items>
                  <MenuItem fx:id="runMenuItem" mnemonicParsing="false" text="Run" />
               </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <TextArea fx:id="codeTextArea" layoutY="30.0" prefHeight="550.0" prefWidth="1024.0" promptText="Code..." />
      <TextArea fx:id="outputTextArea" editable="false" layoutY="593.0" prefHeight="101.0" prefWidth="1024.0" promptText="Output..." />
      <TextArea fx:id="inputTextArea" layoutY="706.0" prefHeight="48.0" prefWidth="1024.0" promptText="Input..." />
   </children>
</AnchorPane>
